<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".ui.home.HomeFragment"
    android:orientation="vertical">


    <RelativeLayout
        android:id="@+id/pro_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner"
        android:layout_margin="20dp">
        <ImageView
            android:id="@+id/profileimg"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/ic_profile_black_24dp"
            android:layout_centerHorizontal="true"
            android:layout_margin="10dp"
            android:contentDescription="Profile"
            tools:ignore="HardcodedText" />
        <TextView
            android:id="@+id/user_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/profileimg"
            android:layout_centerHorizontal="true"
            android:text=""
            android:textColor="#000000"
            android:textSize="20sp"
            android:textStyle="bold"
            tools:ignore="HardcodedText" />
        <View
            android:id="@+id/separator"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/user_name"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="5dp"
            android:layout_marginRight="30dp"
            android:background="#808080" />
        <GridLayout
            android:layout_centerHorizontal="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/separator"
            android:layout_margin="10dp"
            android:columnCount="5">


            <ImageButton
                android:id="@+id/but1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:layout_row="0"
                android:layout_column="0"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#fe3a6e"
                android:contentDescription="@string/qppr"
                android:src="?attr/actionModePasteDrawable" />

            <ImageButton
                android:id="@+id/but2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="0"
                android:layout_rowWeight="1"
                android:layout_column="1"
                android:layout_columnWeight="1"
                android:layout_margin="3dp"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#23c972"
                android:contentDescription="@string/notes"
                android:src="?android:attr/actionModeFindDrawable" />

            <ImageButton
                android:id="@+id/but3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:layout_row="0"
                android:layout_column="2"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#feb200"
                android:contentDescription="@string/syllabus"
                android:src="@android:drawable/ic_menu_agenda" />

            <ImageButton
                android:id="@+id/but4"
                android:layout_gravity="fill"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:layout_row="0"
                android:layout_column="3"
                android:scaleType="fitCenter"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#3992fd"
                android:contentDescription="@string/TT"
                android:src="@android:drawable/ic_dialog_dialer" />

            <ImageButton
                android:layout_gravity="fill"
                android:id="@+id/result_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:layout_margin="3dp"
                android:layout_row="0"
                android:layout_column="4"
                android:background="@drawable/rounded_corner"
                android:backgroundTint="#85144b"
                android:contentDescription="@string/result"
                android:src="@android:drawable/ic_menu_info_details" />

            <TextView
                style="@style/Widget.AppCompat.TextView"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginTop="5dp"
                android:text="@string/qppr"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />

            <TextView
                android:layout_row="1"
                android:layout_column="1"
                android:layout_marginTop="5dp"
                android:text="@string/notes"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />

            <TextView
                android:layout_row="1"
                android:layout_column="2"
                android:layout_marginTop="5dp"
                android:text="@string/syllabus"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />

            <TextView
                android:layout_row="1"
                android:layout_column="3"
                android:layout_marginTop="5dp"
                android:text="@string/TT"
                android:textAlignment="center"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textColor="#000000"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />

            <TextView
                android:layout_row="1"
                android:layout_column="4"
                android:layout_marginTop="5dp"
                android:text="@string/result"
                android:textAlignment="center"
                android:textColor="#000000"
                android:layout_columnWeight="1"
                android:layout_rowWeight="1"
                android:textSize="8sp"
                android:textStyle="bold"
                tools:ignore="SmallSp" />

        </GridLayout>
    </RelativeLayout>
<FrameLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line1"
        android:background="@drawable/rounded_corner"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:visibility="visible">

        <Button

            android:id="@+id/be_ques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/round_button"
            android:text="@string/be"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bsc_ques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/round_button"
            android:text="@string/bsc"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button

            android:id="@+id/bcom_ques"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/round_button"
            android:text="@string/bcom"
            android:textSize="18sp"
            android:textStyle="bold" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line2"
        android:background="@drawable/rounded_corner"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:orientation="vertical">

        <Button
            android:id="@+id/bsc_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/round_button"
            android:text="@string/bsc"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/be_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/round_button"
            android:text="@string/be"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bcom_notes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/round_button"
            android:text="@string/bcom"
            android:textSize="18sp"
            android:textStyle="bold" />


    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line3"
        android:background="@drawable/rounded_corner"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:orientation="vertical">

        <Button
            android:id="@+id/be_syll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/round_button"
            android:text="@string/be"
            android:textSize="18sp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/bcom_syll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/round_button"
            android:text="@string/bcom"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bsc_syll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/round_button"
            android:text="@string/bsc"
            android:textSize="18sp"
            android:textStyle="bold" />



    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/line4"
        android:background="@drawable/rounded_corner"
        android:layout_margin="20dp"
        android:visibility="gone"
        android:orientation="vertical">

        <Button
            android:id="@+id/bcom_tt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/round_button"
            android:text="@string/bcom"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/be_tt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/round_button"
            android:text="@string/be"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/bsc_tt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:background="@drawable/round_button"
            android:text="@string/bsc"
            android:textSize="18sp"
            android:textStyle="bold" />




    </LinearLayout>
</FrameLayout>



</LinearLayout>